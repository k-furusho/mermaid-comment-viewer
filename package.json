{
  "name": "mermaid-comment-viewer",
  "displayName": "Mermaid Comment Viewer",
  "description": "Visualize Mermaid diagrams from code comments with CodeLens, Hover, and an interactive Preview Panel (Zoom/Pan supported).",
  "version": "1.0.1",
  "publisher": "k-furusho",
  "author": {
    "name": "k-furusho"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/k-furusho/mermaid-comment-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/k-furusho/mermaid-comment-viewer/issues"
  },
  "homepage": "https://github.com/k-furusho/mermaid-comment-viewer#readme",
  "engines": {
    "vscode": "^1.95.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "keywords": [
    "mermaid",
    "diagram",
    "preview",
    "comment",
    "visualization",
    "zoom",
    "pan",
    "typescript",
    "python",
    "go",
    "rust"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mermaidInlineViewer.showPreview",
        "title": "Mermaid: Show Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "mermaidInlineViewer.refreshPreview",
        "title": "Mermaid: Refresh Preview",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mermaidInlineViewer.showPreview",
          "when": "editorLangId =~ /(typescript|javascript|python|go|rust)/",
          "group": "mermaid"
        }
      ]
    },
    "configuration": {
      "title": "Mermaid Comment Viewer",
      "properties": {
        "mermaidInlineViewer.theme": {
          "type": "string",
          "enum": [
            "default",
            "base",
            "dark",
            "forest",
            "neutral"
          ],
          "default": "base",
          "description": "Mermaid diagram theme."
        },
        "mermaidInlineViewer.fontSize": {
          "type": "number",
          "default": 16,
          "description": "Font size for Mermaid diagrams."
        },
        "mermaidInlineViewer.backgroundColor": {
          "type": "string",
          "default": "transparent",
          "description": "Background color for the Mermaid diagram preview."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "pretest": "pnpm run lint",
    "lint": "biome lint src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^24.0.0",
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "mermaid": "^11.10.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  }
}
